<div class="container py-4 container-background">
    <!-- Main content of Blog -->

    <% for(let count = 0; count < articles.length; count++) { %>
    <div class="row">
        <div class="col-md-12">
        <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-body">
            <h2 class="card-title"><%= articles[count].title %></h2>
            <p class="card-text"><%= articles[count].description %></p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <a href="/articles/<%= articles[count]._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-muted"><%= articles[count].createdAt %></small>
            </div>
            </div>
        </div>
        </div>
    </div>
    <% } %>
</div>