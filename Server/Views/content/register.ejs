<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="login" id="contentArea">
            <h1 class="display-4">Register</h1>
            <form id="registerForm" method="POST" novalidate>
                <p class="hint-text"><i>Create your own account. It's free and only takes a minute.</i></p>

                <div class="form-group">
                <div class="row">
                    <p class="lead"><i class="fas fa-user-shield"></i><small> Personal Information</small></p>
                    <div class="col-md-6">
                    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                    <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                    </div>
                </div>
                </div>
                <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                    <input type="email" class="form-control" id="emailAddress" name="emailAddress" required
                    value="" placeholder="Email">
                    </div>
                </div>
                
                </div>

                <div class="form-group mt-4">
                    <div class="row">
                        <p class="lead"><i class="fas fa-user-shield"></i><small> System Identification</small></p>
                        <div class="col-md-12">
                        <input type="text" class="form-control" id="username" name="username"  required
                        value="" placeholder="Username">   
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="password" class="form-control" id="password" name="password"  required
                        value="" placeholder="Password">   
                    </div>
                </div>
                
                </div>

                <div class="form-group mb-2">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                        value="" placeholder="Confirm Password">
                        </div>
                    </div>
                </div>
                
                                                    
                <div class="text-right">
                <button id="submitButton" type="submit" class="btn btn-primary btn-md"><i class="fas fa-user-plus fa-sm"></i> Register</button>
                <a href="/" id="cancelButton" class="btn btn-secondary btn-md"><i class="fas fa-undo-alt fa-sm"></i> Cancel</a>
                </div>
            </form>
            
        </div>
        <p class="text-center text-muted small">
            <i>Already have an account?</i> 
            <a href="/login"><strong>Sign in</strong></a>
        </p>
    </div>
</div>